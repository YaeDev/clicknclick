  #content
    span.header
      if (premium || adp)
        img.usericons(src=userProfile.avatarURL({dynamic: true}))      
        h1 #{userProfile.username}
        
      else
        img.usericon(src=userProfile.avatarURL({dynamic: true}))
        h1 #{userProfile.username}
      if(userProfile)
        .badge-holder
            if (admin)
                span.badge
                    img(src='/assets/img/admin.png' title='Administrador do site')
